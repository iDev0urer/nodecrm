.button
  display: inline-block
  font-weight: btn-font-weight
  text-align: center
  white-space: nowrap
  vertical-align: bottom
  cursor: pointer
  user-select: none
  border: btn-border-width solid transparent
  button-size(btn-padding-y, btn-padding-x, font-size-base, line-height, btn-border-radius)
  margin: 0
  // transition(all .2s ease-in-out)

  +hover-focus()
    text-decoration: none

  &:focus
    text-decoration: none

  &:active,
  &.active
    background-image: none
    outline: 0
    box-shadow: inset 0 3px 5px rgba(0,0,0,.125)

  &.disabled,
  &:disabled
    cursor: $cursor-disabled
    opacity: .65
    @include box-shadow(none)

a.button.disabled,
fieldset[disabled] a.button
  pointer-events: none

for name, color in colors
  text-color = (lightness(color) > 65%) ? btn-color-light : btn-color-dark
  .button-{name}
    make-button(text-color, color, color)

  &.button-block
    display: block
    width: 100%

  &.button-block + .button-block

  &.button-block + .button-block
    margin-top: 5px

for bp in map-keys(grid-breakpoints)
  &.button-block-{bp}
    +media-breakpoint-down(bp)
      display: block
      width: 100%
  &.button-block-{bp} + &.button-block-{bp}
    margin-top: 5px


  &.button-lg, &.button-lg + .label
    button-size(btn-padding-y-lg, btn-padding-x-lg, font-size-lg, line-height-lg, btn-border-radius-lg)


  &.button-sm, &.button-sm + .label
    button-size(btn-padding-y-sm, btn-padding-x-sm, font-size-sm, line-height-sm, btn-border-radius-sm)

.button-labeled
  padding: 0
  clearfix()
  font-size: 0

  .button
    display: inline-block
    border-right-radius(0)
    margin: 0

  .label
    display: inline-block
    margin: 0
    background: #fafafa !important
    //color: gray-darker !important
    border-left-radius(0)

    &.label-pointing
      position: relative
      &::before
        border-width: 0 0 1px 1px;
        background-color: inherit;
        border-style: solid;
        border-color: inherit;
        position: absolute;
        top: 50%;
        margin-top: -0.3333em;
        left: -7px;
        transform: translateX(-50%) translateY(-50%) rotate(45deg);
        bottom: auto;
        right: auto;
        content: '';
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        /* transform: rotate(45deg); */
        background-image: none;
        z-index: 2;
        width: 0.6666em;
        height: 0.6666em;
